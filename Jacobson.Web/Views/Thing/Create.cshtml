@{
    ViewBag.Title = "Things";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Make a Thing!</h1>
</div>

<div class="row"
     ng-app="thingCrudApp">
    <div class="col-lg-12"
         ng-controller="thingCrudController as thing">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="col-xs-12 col-lg-2">
                        Name
                    </label>
                    <div class="col-xs-12 col-lg-10">
                        <input class="form-control"
                               ng-model="thing.name" />
                    </div>
                    <label class="col-xs-12 col-lg-2">
                        Description
                    </label>
                    <div class="col-xs-12 col-lg-10">
                        <input class="form-control"
                               ng-model="thing.description" />
                    </div>
                    <a ng-click="thing.create()" class="btn btn-success btn-lg">Submit</a>
                </div>
            </fieldset>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Angular/Thing/CRUD/thingCrudApp.js"></script>
    <script src="~/Scripts/Angular/Thing/CRUD/thingCrudFactory.js"></script>
    <script src="~/Scripts/Angular/Thing/CRUD/thingCrudController.js"></script>
}