@{
    ViewBag.Title = "Things";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Make a Thing!</h1>
</div>

<div class="row"
     ng-app="thingCreateApp">
    <div class="col-lg-12"
         ng-controller="thingCreateController as thing">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="col-xs-12 col-lg-2">
                        Name
                    </label>
                    <div class="col-xs-12 col-lg-10">
                        <input class="form-control"
                               ng-model="thing.Name" />
                    </div>
                    <label class="col-xs-12 col-lg-2">
                        Description
                    </label>
                    <div class="col-xs-12 col-lg-10">
                        <input class="form-control"
                               ng-model="thing.Description" />
                    </div>
                    <a ng-click="thing.submit()" class="btn btn-success btn-lg">Submit</a>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<script src="~/Scripts/Angular/thingCreateApp.js"></script>
<script src="~/Scripts/Angular/thingCreateController.js"></script>